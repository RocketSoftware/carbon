{
  "lerna": "3.13.4",
  "version": "independent",
  "command": {
    "publish": {
      "message": "chore: publish"
    }
  },
  "npmClient": "yarn",
  "npmClientArgs": ["--frozen-lockfile"],
  "useWorkspaces": true,
  "ignoreChanges": [
    "actions/**",
    "codemods/**",
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/docs/**",
    "**/e2e/**",
    "**/examples/**",
    "**/*.md"
  ]
}
